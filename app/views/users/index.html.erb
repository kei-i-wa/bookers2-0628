<div class="container">
  <div class="row">
 <div class="col-3">

<h1>User Info</h1>

<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

<table class="table">
  <tbody>
  <tr>
  <th>name</th>
  <th><%= current_user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= current_user.introduction %></th>
  </tr>
  </tbody>
</table>

<button class="btn btn-secondary"><i class="fas fa-user-tie"></i></button>
<h3 class="mt-5">New Book</h3>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Opinion</h6>
  <%= f.text_area :body %>
  <%= f.submit 'create books' %>
<% end %>
</div>


<div class="col-9">
  <h1>Users</h1>
  <table class="table">
  <thead>
    
    <th>image</th>
    <th>name</th>
    <th></th>
    <th colspan="3"></th>
  </thead>
  <tbody>
 <tr>
 <% @users.each do |user| %>
 <td><%= attachment_image_tag user, :profile_image,format:'jpeg',size: "50x50", fallback: "no_image.jpg" %></td>
 <td><%= user.name %></td>
 <td><%=link_to "Show",user_path(user.id)  %></td>
 </tr>
 </tbody>
</div>

 <% end %>
  </table>
  </div>
</div>
</div>