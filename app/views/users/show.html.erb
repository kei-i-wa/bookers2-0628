<div class="container">
  <div class="row">
 <div class="col-3">

<h1>User Info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

<table class="table">
  <tbody>
  <tr>
  <th>name</th>
  <th><%= @user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= @user.introduction %></th>
  </tr>
  </tbody>
</table>

<button class="btn btn-secondary"><i class="fas fa-user-tie"></i></button>
<h3 class="mt-5">New Book</h3>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Opinion</h6>
  <%= f.text_area :body %>
  <%= f.submit 'create books' %>
<% end %>
</div>


<div class="col-9">
  <h1>Books</h1>
  <table class="table">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>
  </table>
  </div>
</div>
</div>